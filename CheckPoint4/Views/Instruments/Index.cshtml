@model IEnumerable<CheckPoint4.Models.Instrument>

@{
    ViewBag.Title = "Index";
}
<br /><br /><br />
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Renter's name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Client.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.Price)/month
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.InstrumentID }) |
                @Html.ActionLink("Details", "Details", new { id = item.InstrumentID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.InstrumentID })
            </td>
        </tr>
    }

</table>
